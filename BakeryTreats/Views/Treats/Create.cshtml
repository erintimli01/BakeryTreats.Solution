@{
  Layout = "_Layout";
}

@model BakeryTreats.Models.Treat

<h1>Add New Treat</h1>
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Treat's Name: " )
  @Html.TextBoxFor(model => model.Name)
  <br>

  <button type="submit" class="btn btn-success">Add New Treat</button>
}
<p>@Html.ActionLink("Show all treat", "Index")</p>